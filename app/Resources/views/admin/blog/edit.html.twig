{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_post_edit' %}

{% block main %}
    <h1>{{ 'action.edit_post'| trans({'%id%': post.id}) }}</h1>

    {{ form_start(edit_form) }}
{#    {{ dump() }}

        {% for locale in locales() %}
            <div class="form-group">
                {{ locale.name }}
                {{ form_row(edit_form.title.en, { 'attr': {'class': 'form-control'} }) }}
            </div>
        {% endfor %}
#}
        <div class="form-group">
            EN: {{ form_row(edit_form.title_en, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            DE: {{ form_row(edit_form.title_de, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            EN: {{ form_row(edit_form.content_en, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            DE: {{ form_row(edit_form.content_de, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            {{ form_row(edit_form.authorName, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            {{ form_row(edit_form.authorEmail, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            {{ form_row(edit_form.publishedAt, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <input type="submit" value="{{ button_label|default('action.save'|trans) }}"
               class="{{ button_css|default("btn btn-primary") }}" />
    {{ form_end(edit_form) }}


{% endblock %}

{% block sidebar %}
    <div class="section actions">
        {{ include('admin/blog/_form.html.twig', {
            form: delete_form,
            button_label: 'action.delete_post'|trans,
            button_css: 'btn btn-danger',
            show_confirmation: true,
        }, with_context = false) }}
    </div>

    {{ parent() }}

{% endblock %}
