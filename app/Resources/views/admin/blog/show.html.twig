{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_post_show' %}

{% block main %}
    <h1>{{ post.title(app.request.getLocale()) }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Content</th>
                <td>{{ post.content(app.request.getLocale()) }}</td>
            </tr>
            <tr>
                <th>{{ 'label.author_name'|trans }}</th>
                <td><p>{{ post.authorName }}</p></td>
            </tr>
            <tr>
                <th>{{ 'label.author_email'|trans }}</th>
                <td><p>{{ post.authorEmail }}</p></td>
            </tr>
            <tr>
                <th>{{ 'label.published_at'|trans }}</th>
                <td><p>{{  post.publishedAt | date("d M Y H:i:s")  }}</p></td>
            </tr>
        </tbody>
    </table>
{% endblock %}

{% block sidebar %}
    <div class="section">
        <a href="{{ path('admin_post_edit', { id: post.id }) }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-edit"></i> {{ 'action.edit'|trans }}
        </a>
    </div>

    <div class="section">
        {{ include('admin/blog/_form.html.twig', {
            form: delete_form,
            button_label: 'Delete',
            button_css: 'btn btn-lg btn-block btn-danger',
            show_confirmation: true,
        }, with_context = false) }}
    </div>

{% endblock %}
